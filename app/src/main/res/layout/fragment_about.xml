<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.itcreditonline.AboutFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Title1"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:text="1.What is IT Credit Online ?" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/question1"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="@string/loremIpsum" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Title2"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:text="2.Why IT Credit Online ?" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/question2"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="@string/loremIpsum" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Title3"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:text="3.Why we visit you at home ?" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/question3"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="@string/loremIpsum" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Title4"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:text="4.Why are we gathering so much info ?" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/question4"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="@string/loremIpsum" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Title5"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:text="5.What are we doing with the gathered info ?" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/question5"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="@string/loremIpsum" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/sym_action_call"
        android:id="@+id/imageButton"
        android:layout_marginTop="33dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
